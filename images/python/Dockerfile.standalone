# syntax=docker/dockerfile:1.6
FROM python:3.12-slim

SHELL ["/bin/bash", "-c"]

LABEL maintainer="whanos" \
      org.whanos.language="python"

ENV PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1

WORKDIR /app

COPY requirements.txt .

RUN pip install --no-cache-dir -r requirements.txt

COPY . .

CMD ["python", "-m", "app"]
