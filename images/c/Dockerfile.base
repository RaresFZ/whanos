# syntax=docker/dockerfile:1.6
FROM gcc:13.2

SHELL ["/bin/bash", "-c"]

LABEL maintainer="whanos" \
      org.whanos.language="c"

RUN apt-get update \
    && apt-get install -y --no-install-recommends \
       make \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# A Whanos C repository is expected to provide a Makefile that builds a compiled-app binary.
ENV WHANOS_ENTRYPOINT="./compiled-app"

CMD ["/bin/bash"]
